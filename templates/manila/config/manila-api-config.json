{
  "command": "/usr/sbin/httpd -DFOREGROUND",
  "config_files": [
    {
      "source": "/var/lib/config-data/default/httpd.conf",
      "dest": "/etc/httpd/conf/httpd.conf",
      "owner": "root",
      "perm": "0644"
    },
    {
      "source": "/var/lib/config-data/default/10-manila_wsgi.conf",
      "dest": "/etc/httpd/conf.d/10-manila_wsgi.conf",
      "owner": "root",
      "perm": "0644"
    },
    {
      "source": "/var/lib/config-data/default/ssl.conf",
      "dest": "/etc/httpd/conf.d/ssl.conf",
      "owner": "manila",
      "perm": "0644"
    },
    {
      "source": "/var/lib/config-data/tls/certs/*",
      "dest": "/etc/pki/tls/certs/",
      "owner": "manila",
      "perm": "0640",
      "optional": true,
      "merge": true
    },
    {
      "source": "/var/lib/config-data/tls/private/*",
      "dest": "/etc/pki/tls/private/",
      "owner": "manila",
      "perm": "0600",
      "optional": true,
      "merge": true
    },
    {
      "source": "/var/lib/config-data/default/httpd_custom_*",
      "dest": "/etc/httpd/conf/",
      "owner": "apache",
      "perm": "0444",
      "optional": true
    }
  ],
  "permissions": [
      {
          "path": "/var/log/manila",
          "owner": "manila:apache",
          "recurse": true
      },
      {
	  "path": "/etc/httpd/run",
	  "owner": "manila:apache",
	  "recurse": true
      }
  ]
}
